{
  "version": "0.2.0",
  "compounds": [
    {
      "name": "Full Stack (Client + Server)",
      "configurations": ["Backend", "Frontend"]
    }
  ],
  "configurations": [
    {
      "name": "Backend",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-server", // invoke tasks.json build-server task
      "program": "${workspaceFolder}/HttpLogger.Server/bin/Debug/net8.0/HttpLogger.Server.dll", // ğŸ” Update path if project or .NET version differs
      "args": [],
      "cwd": "${workspaceFolder}/HttpLogger.Server", // ğŸ” Backend folder
      "env": {
        "ASPNETCORE_URLS": "https://localhost:7052", // ğŸ” Change backend port if needed
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https://\\S+)",
        "uriFormat": "%s/ui/stats" // ğŸ” Modify default launch page (e.g., %s/, %s/health, etc.)
      }
    },
    {
      "name": "Frontend",
      "type": "chrome",
      "request": "launch",
      "url": "https://localhost:52461", // ğŸ” Frontend port
      "webRoot": "${workspaceFolder}/httplogger.client", // ğŸ” Frontend folder
      "outFiles": ["${workspaceFolder}/httplogger.client/src/**/*.js"], // ğŸ” Adjust if your source directory is different
      "sourceMaps": true,
      "trace": true,
      "preLaunchTask": "npm: start-client", // invoke tasks.json npm: start-client task

      // Optional â€” Uncomment to ensure proper port binding for Chrome debugger
      // "runtimeArgs": ["--remote-debugging-port=9222"],

      // Optional â€” Uncomment if your source maps aren't mapping properly
      // "pathMapping": {
      //   "/@vite/": "${workspaceFolder}/httplogger.client/" // ğŸ” Frontend folder
      // }
    }
  ]
}
