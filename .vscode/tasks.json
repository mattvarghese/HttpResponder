{
  "version": "2.0.0",
  "tasks": [
    {
      // Required: Build backend - used by launch.json
      "label": "build-server",
      "type": "process",
      "command": "dotnet",
      "args": ["build", "${workspaceFolder}/HttpLogger.Server"], // 游대 Modify this to your backend folder name
      "problemMatcher": "$msCompile"
    },
    {
      // Optional: Run backend outside of debugger (not used by launch.json)
      "label": "run-server",
      "type": "process",
      "command": "dotnet",
      "args": ["run", "--project", "${workspaceFolder}/HttpLogger.Server"], // 游대 Modify this to your backend folder name
      "options": {
        "env": {
          "ASPNETCORE_URLS": "https://localhost:7052", // 游대 Modify port if backend uses a different one
          "ASPNETCORE_ENVIRONMENT": "Development"
        }
      }
    },
    {
      // Starts the Vite frontend - used by launch.json
      "label": "npm: start-client",
      "type": "npm",
      "script": "dev", // 游대 Ensure this matches your package.json ("dev" or "start")
      "path": "httplogger.client", // 游대 Modify to your frontend folder
      "isBackground": true,
      "problemMatcher": {
        "pattern": [
          {
            "regexp": ".",
            "file": 1,
            "location": 2,
            "message": 3
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*vite v.* dev server running at.*",
          "endsPattern": ".*ready in .*"
        }
      },
      "options": {
        "env": {
          "PORT": "52461", // 游대 Set to your desired frontend port
          "HTTPS": "true"
        }
      }
    }
  ]
}
